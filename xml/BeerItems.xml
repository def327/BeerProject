  <beer beer-id="1">
  	<name>Zhiguli amber</name>
  		<!--Указывать сорт пива, выбор из enum схемы-->
    <sort-type>light</sort-type>
		<!--Указывать производителя пива, тут стоит регулярка на то чтобы название с большой буквы и можно пробелы -->
    <manufacturer>Olivaria brewery</manufacturer>
		<!--Указывать в процентное содаржание каждого ингредиента пива, можно ставить только целые зачения  -->
    <ingredients>
      <water>89</water>
      <sugar>2</sugar>
      <hop>3</hop>
      <malt>3</malt>
      <yeast>3</yeast>
    </ingredients>
	<!--Атрибут для процентного градуса, необезателен если пиво безакогольное смотри тег <alcohol> , можно ставить только целые зачения -->
    <chars alcohol-volume="4.8">
		<!--Прозрачность пива в процентах -->
      <beer-clarity>11</beer-clarity>
	  	<!--Тут понтяно и так-->
      <is-filtered>true</is-filtered>
	    <!--Атрибут для количетсва килоколорий( * ккал), можно ставить только целые зачения -->
      <food-value>42</food-value>
      <packaging-type>
	    <!--Тут понтяно и так -->
        <package-capacity>0.5</package-capacity>
		<!--Материал тары, смотри enum схемы для значения-->
        <package-material>glass</package-material>
      </packaging-type>      
    </chars>
		<!--Алкогольное или безалкогольное пиво, смотри enum схемы для значения-->
    <alcohol>alcoholic beverage</alcohol>
  </beer>
  
